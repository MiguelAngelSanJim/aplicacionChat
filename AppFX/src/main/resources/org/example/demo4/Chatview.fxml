<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo4.ChatController">
    <top>
        <HBox spacing="20" style="-fx-padding: 15; -fx-background-color: #1e1e1e;" alignment="CENTER">
            <Text fx:id="chatTitle" text="Chat grupal" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-fill: #ffffff;" />
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <TextArea fx:id="chatArea" editable="false" wrapText="true" styleClass="text-area" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="15" style="-fx-padding: 10;" alignment="CENTER">
            <TextField fx:id="inputField" HBox.hgrow="ALWAYS" styleClass="text-field" />
            <Button fx:id="sendButton" text="Enviar" styleClass="button" />
            <Button fx:id="vibrateButton" text="Zumbido" styleClass="button" />
        </HBox>
    </bottom>
    <right>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2c2c2c;">
            <Text fx:id="onlineUsersTitle" text="Usuarios en lÃ­nea" style="-fx-font-size: 16px; -fx-fill: #ffffff;" />
            <ListView fx:id="usersListView" prefWidth="150" VBox.vgrow="ALWAYS" styleClass="list-view" /> <!-- Ajustado a 150 -->
        </VBox>
    </right>
</BorderPane>
